@page
@model Test.Pages.Accueil.MotDePasseModel
@{
    Layout = null;
    ViewData["Title"] = "MotDePasse";
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Test</title>

        <environment include="Development">
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
            <link rel="stylesheet" href="~/css/accueil.css" />
        </environment>
        <environment exclude="Development">
            <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
                  asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
                  asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
            <link rel="stylesheet" href="~/css/accueil.min.css" asp-append-version="true" />
        </environment>
    </head>

    <body>
        <div class="row">
            <div class="Description col-md-9 no-float">
                <partial name="~/Pages/Accueil/Description.cshtml" />
            </div>
            <div class="clearfix RightSide col-md-3 no-float">
                <!-- Message -->
                <div class="welcome">
                    <h1>Mot de passe oublié ?</h1>
                    <h2>Entrez votre adresse ci-dessous</h2>
                </div>
                <!-- E-mail -->
                <div class="textbox input-group mb-3">
                    <input type="text" class="inputText form-control" placeholder="E-mail" aria-label="E-mail" aria-describedby="basic-addon1">
                    <span class="underline"></span>
                </div>       
                <!-- Boutton d'envoie -->
                <div>
                    <button type="button" class="validationButton btn btn-primary btn-lg btn-block">Envoyer</button>
                </div>
                <!-- Lien vers Inscription -->
                <div class="return">
                    <p><a href="./Connection" class="text-white">Annuler</a></p>
                </div>
            </div>
        </div>
    </body>
</html>